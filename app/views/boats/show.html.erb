<p align="center">
  <strong>Name:</strong>
  <%= @boat.name %>
</p>

<p align="center">
  <strong>Owner:</strong>
  <%= @boat.ownerid %>
</p>

<p align="center">
  <strong>Description:</strong>
  <%= @boat.description %>
</p>


<p align="center">
  <strong>Available Date:</strong>
  <%= @boat.available_date %>
</p>


<ul class="bxslider">
  <% @boat_attachments.each do |p| %>
      <li><%= image_tag p.image_url%></li>
  <% end %>
</ul>

