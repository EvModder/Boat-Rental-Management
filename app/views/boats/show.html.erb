<p id="notice"><%= notice %></p>

<p>
    <strong>Name:</strong>
    <%= @boat.name %>
  </p>

<p>
    <strong>Owner:</strong>
    <%= @boat.owner_name %>
  </p>

<p>
  <strong>Width:</strong><%= @boat.width %>ft. <strong>Depth:</strong><%= @boat.depth %>ft. <strong>Height:</strong><%= @boat.height %>ft.
</p>

<p>
  <strong>Driven in:</strong>
  <%= @boat.water %>
</p>

<p>
  <strong>Capcity:</strong>
  <%= @boat.capacity %>
</p>

<p>
  <strong>State:</strong>
  <%= @boat.state %>
  <strong>City:</strong>
  <%= @boat.city %>
</p>


<p>
    <strong>Description:</strong>
    <%= @boat.description %>
  </p>

<ul class="bxslider" >
  <% @boat_attachments.each do |p| %>
      <li><%= image_tag p.image_url%></li>
  <% end %>
</ul>
<br><br>




<br><br>

<%= form_tag(new_boat_rent_path(@boat), method: "get") do%>
    <p class="rentoption">
      <strong>Hire a Captain?</strong><br>
      <input type="radio" name="with_captain" value="yes"> Yes
      <input type="radio" name="with_captain" value="no"> No<br><br>

      <strong>Pick a Date!</strong>

      <%= hidden_field_tag "available_date", @boat.available_date, { :id => "available-date" } %>

    <div id="datepicker">
    </div>
    <input type="hidden" id="boat_available_date" name="boat[available_date]">


    </p>
     <%= submit_tag("Rent", :type => :image, :src => "/assets/rent-now-button.png", :class => "rentbutton", :width => "15%") %>
<% end %>

<p>
   <% if @boat.video_url != nil %>
    <strong>Video:</strong><br/>
    <%= video_tag @boat.video_url.to_s, :controls =>true %>
   <% end %>

  </p>



<p>
  <%= commontator_thread(@boat) %>
  <% if @boat.ownerid==current_user.id %>
      <%= link_to 'Edit', edit_boat_path(@boat) %> |
      <% end %>
  <%= link_to 'Back', boats_path %>
  </p>