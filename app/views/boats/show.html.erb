<p id="notice"><%= notice %></p>

<p>
    <strong>Name:</strong>
    <%= @boat.name %>
  <i class="rentbutton">
      <%= link_to image_tag("rent-now-button.png", width: "50%"), {:controller => 'boats', :action => "rent" } %>
      </i>
  </p>

<p>
    <strong>Owner:</strong>
    <%= @boat.owner_name %>
  </p>

<p>
    <strong>Description:</strong>
    <%= @boat.description %>
  </p>


<p>
    <strong>Available Date:</strong>
    <%= @boat.available_date %>
  </p>


<ul class="bxslider">
    <% @boat_attachments.each do |p| %>
            <li><%= image_tag p.image_url%></li>
        <% end %>
  </ul>
<br><br>

<p>
    <strong>Video:</strong><br/>
    <%= video_tag @boat.video_url.to_s, :controls =>true %>

  </p>

<p>
  <%= commontator_thread(@boat) %>
  <% if @boat.ownerid==current_user.id %>
      <%= link_to 'Edit', edit_boat_path(@boat) %> |
      <% end %>
  <%= link_to 'Back', boats_path %>
  </p>