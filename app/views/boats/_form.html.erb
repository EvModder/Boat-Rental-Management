<%= form_for(@boat) do |f| %>
  <% if @boat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@boat.errors.count, "error") %> prohibited this boat from being saved:</h2>

      <ul>
      <% @boat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <%= f.hidden_field :ownerid%>
  <%= f.hidden_field :owner_name%>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </div>


    <%= f.label :available_date %><br>
    <div id="datepicker">
      <script type="text/javascript">
          $('#datepicker').datepicker({multidate:true});
          $('#datepicker').on('changeDate', function() {
              $('#boat_available_date').val(
                  $('#datepicker').datepicker('getFormattedDate')
              );
          });
      </script>
    </div>
    <input type="hidden" id="boat_available_date" name="boat[available_date]">



  <%= f.fields_for :boat_attachments do |p| %>
    <div class="field">
      <%= p.label :image %><br>
      <%= p.file_field :image, :multiple => true, name: "boat_attachments[image][]" %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :video %><br>
    <%=f.file_field :video%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
