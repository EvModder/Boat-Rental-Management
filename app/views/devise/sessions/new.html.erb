<div class="log-in-page row">

  <div class="log-in-left col-sm-6">
    <%=image_tag("login-page.png", alt: "Example Image", class:"log-in-image")%>
  </div>
 <div class="log-in-left col-sm-1">

  </div>
  <div class="log-in-right col-sm-5">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group login-input">
        <%= f.label :email, class: "col-sm-2" %>
        <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group login-input">
        <%= f.label :password , class: "col-sm-2" %>
        <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>
    
      <div class="form-group login-input">
      
        <div class="col-sm-5">
          <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me %>
            
          <% end -%>
        </div>
      </div>
      <div class="form-group">
          <%= f.submit "Log in", class:"btn btn-primary btn-block"%>
      </div>
    <% end %>
   
      <%= render "devise/shared/links" %>
  </div>
</div>